@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Girişi</h4>
                        <p class="card-subtitle mb-4">Sosyal medya alanına veri girişini aşağıdan yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaId"/>
                            <div class="form-group">
                                <label for="exampleInputTitle">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Sosyal Medya Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Url Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">İkon Url</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="İkonu Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>














