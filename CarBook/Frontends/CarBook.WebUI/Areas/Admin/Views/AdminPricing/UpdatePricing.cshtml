@model UpdatePricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> Ödeme Periyodu Güncelleme</h4>
                        <p class="card-subtitle mb-4">Ödeme periyodu alanına veri girişini aşağıdan yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="PricingId"/>
                            <div class="form-group">
                                <label for="exampleInputTitle">Ödeme Periyot Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Ödeme Periyot Başlığını Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









