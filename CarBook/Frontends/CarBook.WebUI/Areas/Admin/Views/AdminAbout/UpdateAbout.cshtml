@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımda Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Hakkımda alanına veri girişini aşağıdan yapabilirsiniz. Tema bütünlüğü için sadece 1 adet veri giriniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="aboutId"/>
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="description" placeholder="Açıklama Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="imageUrl" placeholder="Hakkımda Kapak Fotoğrafını Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









