@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title"> Yazar Güncelleme</h4>
                        <p class="card-subtitle mb-4">Yazar alanını aşağıdan güncelleyebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoImageUrl">Yazar Görsel</label>
                                <input type="text" class="form-control" id="exampleInputVideoImageUrl" asp-for="ImageUrl" placeholder="Yazar Görselini Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









